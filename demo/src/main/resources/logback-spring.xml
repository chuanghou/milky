<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- https://github.com/spring-projects/spring-boot/blob/v1.5.13.RELEASE/spring-boot/src/main/resources/org/springframework/boot/logging/logback/defaults.xml -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <property name="APP_NAME" value="demo"/>
    <property name="LOG_PATH" value="${user.home}/${APP_NAME}/logs"/>
    <property name="LOG_FILE" value="${LOG_PATH}/application.log"/>
    <property name="CONSOLE_LOG_PATTERN" value="%n%d{yyyy-MM-dd HH:mm:ss.SSS} | %thread | %logger{0}-%X{_line} | %-5level
                                                %n logTag: %m
                                                %n source: %X{source}
                                                %n arg0: %X{arg0}
                                                %n arg1: %X{arg1}
                                                %n arg2: %X{arg2}
                                                %n arg3: %X{arg3}
                                                %n arg4: %X{arg4}
                                                %n result: %X{result}
                                                %n cost: %X{cost}
                                                %n%exception{30} %n"/>
    <property name="JSON_LOG_PATTERN" value="{
        &quot;time&quot;: &quot;%d{yyyy-MM-dd HH:mm:ss.SSS}&quot;,
        &quot;level&quot;: &quot;%level&quot;,
        &quot;thread&quot;: &quot;%thread&quot;,
        &quot;class&quot;:&quot;%logger{30}&quot;,
        &quot;line&quot;: &quot;%line&quot;,
        &quot;milky_line&quot;: &quot;%X{_line}&quot;,
        &quot;cost&quot;: &quot;%X{cost}&quot;,
        &quot;success&quot;: &quot;%X{success}&quot;,
        &quot;stack_trace&quot;: &quot;%exception{30}&quot;,
        &quot;traceId&quot;: &quot;%X{EAGLEEYE_TRACE_ID}&quot;,
        &quot;rpcId&quot;: &quot;%X{EAGLEEYE_RPC_ID}&quot;,
        &quot;test&quot;: &quot;%X{_test}&quot;,
        &quot;logTag&quot;: &quot;%m&quot;,
        &quot;source&quot;: &quot;;%X{source}&quot;,
        &quot;arg0&quot;: &quot;%X{arg0}&quot;,
        &quot;arg1&quot;: &quot;%X{arg1}&quot;,
        &quot;arg2&quot;: &quot;%X{arg2}&quot;,
        &quot;arg3&quot;: &quot;%X{arg3}&quot;,
        &quot;arg4&quot;: &quot;%X{arg4}&quot;,
        &quot;result&quot;: &quot;%X{result}&quot;
    }"/>
    <!--  https://www.freeformatter.com/xml-escape.html#ad-output-->

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <appender name="APPLICATION" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxHistory>7</maxHistory>
            <maxFileSize>50MB</maxFileSize>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <pattern>
                    <pattern>${JSON_LOG_PATTERN}</pattern>
                </pattern>
            </providers>
        </encoder>
    </appender>
    <appender name="ASYNC_APPLICATION" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="APPLICATION" />
        <!-- 不丢失日志.如果不配置,队列的80%已满时,则会丢弃TRACT、DEBUG、INFO级别的日志 -->
        <discardingThreshold>0</discardingThreshold>
        <queueSize>512</queueSize>
        <!--        不加不会打印类名和行号-->
        <includeCallerData>true</includeCallerData>
    </appender>


    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>